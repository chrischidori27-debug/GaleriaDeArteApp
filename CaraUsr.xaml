<Window
    x:Class="AppWpfLogin2P2C.CaraUsr"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppWpfLogin2P2C"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Morpho Ether"
    Width="700"
    Height="600"
    Icon="/images/LogoLogin Mariposa.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Offset="0" Color="#B61CBD" />
                <GradientStop Offset="1" Color="#358ACB" />
            </LinearGradientBrush>
        </Grid.Background>

        <Rectangle Fill="Black" Opacity="0.25" />
        <Image
            Width="100"
            Height="100"
            VerticalAlignment="Top"
            Source="/images/LogoLogin.png" />
        <Button
            x:Name="btnVolver"
            Margin="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnVolver_Click"
            Content="VOLVER" />
        <Border
            Margin="30,100,30,30"
            BorderBrush="Black"
            BorderThickness="5"
            CornerRadius="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#358ACB" />
                    <GradientStop Offset="1" Color="#0D4AAE" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0.5*" />
                </Grid.RowDefinitions>
                <Label
                    x:Name="lblTitulo"
                    Grid.ColumnSpan="2"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Content="LISTA DE OBRAS DISPONIBLES"
                    FontSize="35" />

                <ListBox
                    x:Name="lstBObras"
                    Grid.Row="1"
                    Margin="20,0,20,0"
                    ItemsSource="{Binding ListaObras}"
                    SelectedItem="{Binding ObraSelect}"
                    SelectionChanged="lstBObras_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Height="90">
                                <StackPanel Orientation="Horizontal">
                                    <Image
                                        Width="80"
                                        Height="80"
                                        Margin="5"
                                        Source="{Binding ImagenRuta}"
                                        Stretch="Uniform" />

                                    <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                        <TextBlock FontSize="20" Text="{Binding autor}" />
                                        <TextBlock Text=" - " />
                                        <TextBlock FontSize="20" Text="{Binding precio}" />
                                        <TextBlock Text=" - " />
                                        <TextBlock FontSize="20" Text="{Binding AnioDeCreacion}" />
                                        <TextBlock Text=" - " />
                                        <TextBlock FontSize="20" Text="{Binding estilo}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button
                    x:Name="btnComprar"
                    Grid.Row="2"
                    Width="100"
                    Click="btnComprar_Click"
                    Content="Comprar" />
            </Grid>
        </Border>
    </Grid>
</Window>

<Window
    x:Class="AppWpfLogin2P2C.DataBinding"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppWpfLogin2P2C"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Morpho Ether"
    Width="700"
    Height="600"
    Icon="/images/LogoLogin Mariposa.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Offset="0" Color="#B61CBD" />
                <GradientStop Offset="1" Color="#358ACB" />
            </LinearGradientBrush>
        </Grid.Background>

        <Rectangle Fill="Black" Opacity="0.25" />
        <Image
            Width="100"
            Height="100"
            VerticalAlignment="Top"
            Source="/images/LogoLogin.png" />
        <Button
            x:Name="btnVolver"
            Margin="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="VOLVER" Click="btnVolver_Click" />
        <Border
            Margin="30,100,30,30"
            BorderBrush="Black"
            BorderThickness="5"
            CornerRadius="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#358ACB" />
                    <GradientStop Offset="1" Color="#0D4AAE" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label
                    x:Name="lblTitulo"
                    Grid.ColumnSpan="2"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Content="ADMINISTRACION DE OBRAS"
                    FontSize="35" />

                <ListBox
                    x:Name="lstBObras"
                    Grid.Row="1"
                    Margin="20,0,20,0"
                    ItemsSource="{Binding ListaObras}"
                    SelectedItem="{Binding ObraSelect}"
                    SelectionChanged="lstBObras_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Height="90">
                                <StackPanel Orientation="Horizontal">
                                    <Image
                                        Width="80"
                                        Height="80"
                                        Margin="5"
                                        Source="{Binding ImagenRuta}"
                                        Stretch="Uniform" />

                                    <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                        <TextBlock FontSize="20" Text="{Binding autor}" />
                                        <TextBlock Text=" - " />
                                        <TextBlock FontSize="20" Text="{Binding precio}" />
                                        <TextBlock Text=" - " />
                                        <TextBlock FontSize="20" Text="{Binding AnioDeCreacion}" />
                                        <TextBlock Text=" - " />
                                        <TextBlock FontSize="20" Text="{Binding estilo}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <ScrollViewer
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="20"
                    VerticalScrollBarVisibility="Auto">

                    <StackPanel>
                        <Label
                            Content="AGREGAR OBRA"
                            FontSize="20"
                            FontWeight="Bold" />

                        <Label Content="Autor:" />
                        <TextBox x:Name="txtAutor" />

                        <Label Content="Precio:" />
                        <TextBox x:Name="txtPrecio" />

                        <Label Content="Año de Creación:" />
                        <TextBox x:Name="txtAnioCreacion" />

                        <Label Content="Estilo:" />
                        <TextBox x:Name="txtEstilo" />
                        <StackPanel Margin="10" Orientation="Horizontal">
                            <Button
                                x:Name="btnAgregarImg"
                                Width="250"
                                Click="btnAgregarImg_Click"
                                Content="Agregar Imagen" />
                            <Image
                                x:Name="ImagenSelec"
                                Width="250"
                                Height="250"
                                Margin="10"
                                Stretch="Uniform" />
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Button
                                x:Name="btnAgregar"
                                Width="200"
                                Click="btnAgregar_Click"
                                Content="Agregar" />
                            <Button
                                x:Name="btnBorrar"
                                Width="200"
                                Click="btnBorrar_Click"
                                Content="Borrar Seleccionado" />
                        </StackPanel>

                    </StackPanel>

                </ScrollViewer>

            </Grid>

        </Border>
    </Grid>
</Window>

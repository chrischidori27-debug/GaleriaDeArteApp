<Window
    x:Class="AppWpfLogin2P2C.WinSing_Up"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppWpfLogin2P2C"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Morpho Ether"
    Width="500"
    Height="700"
    Icon="/images/LogoLogin Mariposa.png"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Offset="0" Color="#B61CBD" />
                <GradientStop Offset="1" Color="#358ACB" />
            </LinearGradientBrush>
        </Grid.Background>

        <Rectangle Fill="Black" Opacity="0.25" />
        <Image
            Width="100"
            Height="100"
            VerticalAlignment="Top"
            Source="/images/LogoLogin.png" />
        <Border
            Margin="30,100,30,30"
            BorderBrush="Black"
            BorderThickness="5"
            CornerRadius="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#358ACB" />
                    <GradientStop Offset="1" Color="#0D4AAE" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Label
                    x:Name="lblTitulo"
                    Grid.ColumnSpan="2"
                    Content="SING UP"
                    FontSize="40" />
                <Label
                    x:Name="lblNombre"
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    Content="Nombre" />
                <TextBox x:Name="txtNombre" Grid.Row="2" />
                <Label
                    x:Name="lblApPaterno"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Content="Ap.Paterno" />
                <TextBox
                    x:Name="txtPaterno"
                    Grid.Row="2"
                    Grid.Column="1" />
                <Label
                    x:Name="lblApMaterno"
                    Grid.Row="3"
                    HorizontalAlignment="Left"
                    Content="Ap.Materno:" />
                <TextBox x:Name="txtMaterno" Grid.Row="4" />
                <Label
                    x:Name="lblCelular"
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Content="Celular:" />
                <TextBox
                    x:Name="txtCelular"
                    Grid.Row="4"
                    Grid.Column="1" />
                <Label
                    x:Name="lblCorreo"
                    Grid.Row="5"
                    HorizontalAlignment="Left"
                    Content="E-mail:" />
                <TextBox x:Name="txtCorreo" Grid.Row="6" />
                <Label
                    x:Name="lblAñoNacimiento"
                    Grid.Row="5"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Content="Año de Nac:" />
                <TextBox
                    x:Name="txtAñoNacimiento"
                    Grid.Row="6"
                    Grid.Column="1" />
                <Label
                    x:Name="lblContraseña"
                    Grid.Row="7"
                    HorizontalAlignment="Center"
                    Content="Password:" />
                <PasswordBox
                    x:Name="pwdContraseña"
                    Grid.Row="7"
                    Grid.ColumnSpan="2"
                    Height="35"
                    Margin="165,10,70,10"
                    VerticalContentAlignment="Center"
                    Background="#677580"
                    FontSize="20"
                    Opacity="0.6" />
                <Button
                    x:Name="btnLimpiar"
                    Grid.Row="8"
                    Click="btnVolver_Click"
                    Content="Volver" />
                <Button
                    x:Name="btnAceptar"
                    Grid.Row="8"
                    Grid.Column="1"
                    Click="btnAceptar_Click"
                    Content="Aceptar" />
                <Label
                    x:Name="lblMensaje"
                    Grid.Row="9"
                    Grid.ColumnSpan="2"
                    FontSize="15"
                    Foreground="Red" />
            </Grid>
        </Border>
    </Grid>
</Window>
